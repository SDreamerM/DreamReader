<div class="modal fade" id="sign-up-modal" tabindex="-1" role="dialog" aria-labelledby="sign-up-modal-title" aria-hidden="true" data-bind="with: signUpViewModel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="sign-up-modal-title">Sign Up</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group" data-bind="css: { 'has-error': showValidation() && !email.isValid(), 'has-success': showValidation() && email.isValid() }">
                        <label class="control-label" for="sign-up-modal-email">Email address</label>
                        <input type="email" class="form-control" id="sign-up-modal-email" placeholder="Enter email" data-bind="value: email">
                        <p class="help-block" data-bind="validationMessage: email"></p>
                    </div>
                    <div class="form-group" data-bind="css: { 'has-error': showValidation() && !password.isValid(), 'has-success': showValidation() && password.isValid() }">
                        <label class="control-label" for="sign-up-modal-password">Password</label>
                        <input type="password" class="form-control" id="sign-up-modal-password" placeholder="Password" data-bind="value: password">
                        <p class="help-block" data-bind="validationMessage: password"></p>
                    </div>
                    <div class="form-group" data-bind="css: { 'has-error': showValidation() && !confirmPassword.isValid(), 'has-success': showValidation() && confirmPassword.isValid() }">
                        <label class="control-label" for="sign-up-modal-confirm-password">Confrim Password</label>
                        <input type="password" class="form-control" id="sign-up-modal-confirm-password" placeholder="Confirm Password" data-bind="value: confirmPassword">
                        <p class="help-block" data-bind="validationMessage: confirmPassword"></p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: signUp">Sign Up</button>
            </div>
        </div>
    </div>
</div>

